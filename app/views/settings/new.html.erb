<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Settings</h3>
  </div>
  <div class="panel-body">

  <%= form_for @setting do  |f|  %>
    <div class="form-group">  
      <%= f.label :message %>
      <%= f.text_field :message, :autofocus => true, :class => "form-control", :placeholder => "Message" %></div>
    
    <div class="form-group">  
      <%= f.label :recipient %>
      <%= f.text_field :recipient, :class => "form-control", :placeholder => "Recipient" %></div>
    
    <div class="checkbox">  
      <%= f.label :autounlock %>
      <%= f.check_box :autounlock %></div>
      
    <div><%= f.submit "Save", :class => "btn btn-primary" %></div>
  
  <% end %>
</div>
</div>